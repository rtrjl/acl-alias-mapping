<config-template
        xmlns="http://tail-f.com/ns/config/1.0">
    <devices
            xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{$DEVICE_NAME}</name>
            <config>
                <pseudowire-class
                        xmlns="urn:ios">
                    <name>{$VC_CLASS}</name>
                    <encapsulation>mpls</encapsulation>
                </pseudowire-class>
                <interface
                        xmlns="urn:ios">
                    <GigabitEthernet>
                        <name>{$INTERFACE_ID}</name>
                        <service>
                            <instance>
                                <id>{$SERVICE_ETHERNET_INSTANCE_ID}</id>
                                <ethernet/>
                                <description>{$IFACE_DESCRIPTION}</description>
                                <service-policy>
                                    <output>
                                        <name>{$QOS_POLICY_NAME}</name>
                                    </output>
                                </service-policy>
                                <encapsulation>
                                    <dot1q>
                                        <id>{$VLAN_ID}</id>
                                    </dot1q>
                                </encapsulation>
                                <rewrite>
                                    <ingress>
                                        <tag>
                                            <pop>1</pop>
                                            <mode>symmetric</mode>
                                        </tag>
                                    </ingress>
                                </rewrite>
                                <xconnect>
                                    <address>{$REMOTE_IP}</address>
                                    <vcid>{$VC_ID}</vcid>
                                    <encapsulation>mpls</encapsulation>
                                    <pw-class>{$VC_CLASS}</pw-class>
                                </xconnect>
                            </instance>
                        </service>
                    </GigabitEthernet>
                </interface>
            </config>
        </device>
    </devices>
</config-template>
